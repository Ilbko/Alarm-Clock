<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DateTimeApp.View">

    <Style x:Key="GridStyle">
        <Setter Property="ItemsControl.Background" Value="Black"></Setter>
    </Style>
    <Style x:Key="LabelStyle">
        <Setter Property="ItemsControl.Background" Value="Gray"></Setter>
        <!--<Setter Property="ItemsControl.Foreground" Value="White"></Setter>-->
        <Setter Property="ItemsControl.VerticalAlignment" Value="Center"></Setter>
        <Setter Property="ItemsControl.HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="ItemsControl.BorderThickness" Value="1"></Setter>
        <Setter Property="ItemsControl.BorderBrush" Value="White"></Setter>
        <Setter Property="ItemsControl.FontSize" Value="25"></Setter>
        <Setter Property="ItemsControl.FontWeight" Value="Bold"></Setter>
    </Style>
    <Style x:Key="ControlStyle">
        <Setter Property="ItemsControl.Foreground" Value="White"></Setter>
        <Setter Property="ItemsControl.Background" Value="White"></Setter>
    </Style>
</ResourceDictionary>